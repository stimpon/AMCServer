<Application x:Class="AMCClient2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AMCClient2">
    <Application.Resources>
        <!-- Merge all of the dictionaries -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>


                <ResourceDictionary Source="pack:\\application:,,,/Views/Styles/Strings.xaml"  />
                <ResourceDictionary Source="pack:\\application:,,,/Views/Styles/Fonts.xaml"  />
                <ResourceDictionary Source="pack:\\application:,,,/Views/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack:\\application:,,,/Views/Styles/ContainerStyles.xaml"  />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
