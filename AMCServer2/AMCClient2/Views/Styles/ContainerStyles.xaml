<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type DataGridColumnHeader}" x:Key="ConnectionsListHeaderStyle">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    
                    <Border Height="25" Background="{StaticResource SolidColor_Blue}" BorderThickness="0">
                        
                        <TextBlock Text="{Binding}" 
                                   VerticalAlignment="Center" 
                                   FontFamily="Consolas" 
                                   Margin="5,0,0,0" 
                                   Foreground="White" FontSize="13"/>
                        
                    </Border>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>